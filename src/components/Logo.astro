---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
}

const { size = 'lg' } = Astro.props;

const sizeClass =
  size === 'sm'
    ? 'text-2xl'
    : size === 'md'
    ? 'text-4xl sm:text-5xl'
    : 'text-[56px] sm:text-[64px]';

const paddingClass = size === 'sm' ? '' : 'pt-10';
---

<div class={`font-extrabold font-[Inter] tracking-tight leading-none ${sizeClass} ${paddingClass}`}>
  <span class="text-black dark:text-white">calend</span><span class="text-orange-500">hub.</span>
</div>