---
// Features Section for CalendHub - Modern Design with Orange Accent
import googleCalendar from "../../assets/images/128px-Google_Calendar_icon_(2020).svg.png";
import outlookCalendar from "../../assets/images/53-538229_outlook-calendar-icon-outlook-icon-png-transparent-png.png";
import googleMeet from "../../assets/images/Google_Meet-Logo.wine.svg";
import linkedin from "../../assets/images/LinkedIn-Icon-Logo.wine.svg";
import zoom from "../../assets/images/zoom.svg";
---

<section id="features" class="py-32 relative overflow-hidden">
  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div
        class="inline-flex items-center gap-2 bg-orange-500/10 border border-orange-500/20 rounded-full px-4 py-2 text-sm font-medium text-orange-600 dark:text-orange-400 mb-6"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Powerful Features</span>
      </div>
      <h2
        class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6 text-text"
      >
        Everything You Need,
        <br />
        <span class="text-text-muted">Nothing You Don't</span>
      </h2>
      <p class="text-xl text-text-muted max-w-2xl mx-auto leading-relaxed">
        The most powerful calendar platform for professionals and teams who
        value their time.
      </p>
    </div>

    <!-- Main Features Grid - 3 Cards -->
    <div class="grid lg:grid-cols-3 gap-8 mb-24 max-w-7xl mx-auto">
      <!-- Feature 1: Multi-Calendar Sync -->
      <div class="group relative">
        <!-- Glow effect on hover -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>

        <div
          class="relative bg-surface/80 dark:bg-surface/50 backdrop-blur-sm border border-border hover:border-orange-500/50 rounded-3xl p-8 transition-all duration-300 hover:-translate-y-2 h-full"
        >
          <!-- Icon -->
          <div
            class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
          </div>

          <!-- Content -->
          <h3 class="text-2xl font-display font-bold text-text mb-4">
            Multi-Calendar Sync
          </h3>
          <p class="text-text-muted mb-6 leading-relaxed">
            Connect unlimited Google, Outlook, iCloud, and other calendars.
            Two-way sync keeps everything updated in real-time with zero
            conflicts.
          </p>

          <!-- Feature List -->
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Bidirectional syncing</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Privacy mode for sensitive info</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Automatic conflict detection</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Feature 2: Smart Booking Links -->
      <div class="group relative">
        <!-- Glow effect on hover -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>

        <div
          class="relative bg-surface/80 dark:bg-surface/50 backdrop-blur-sm border border-border hover:border-orange-500/50 rounded-3xl p-8 transition-all duration-300 hover:-translate-y-2 h-full"
        >
          <!-- Icon -->
          <div
            class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
              ></path>
            </svg>
          </div>

          <!-- Content -->
          <h3 class="text-2xl font-display font-bold text-text mb-4">
            Smart Booking Links
          </h3>
          <p class="text-text-muted mb-6 leading-relaxed">
            Create beautiful booking pages with custom URLs. More powerful than
            Calendly with unlimited meeting types and advanced scheduling rules.
          </p>

          <!-- Feature List -->
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Branded booking pages</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Automatic time zone detection</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Buffer times & availability rules</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Feature 3: AI Meeting Notes -->
      <div class="group relative">
        <!-- Glow effect on hover -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>

        <div
          class="relative bg-surface/80 dark:bg-surface/50 backdrop-blur-sm border border-border hover:border-orange-500/50 rounded-3xl p-8 transition-all duration-300 hover:-translate-y-2 h-full"
        >
          <!-- Icon -->
          <div
            class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-8 h-8 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </div>

          <!-- Content -->
          <h3 class="text-2xl font-display font-bold text-text mb-4">
            AI Meeting Notes
          </h3>
          <p class="text-text-muted mb-6 leading-relaxed">
            Our bot joins your Zoom or Google Meet, records, transcribes, and
            summarizes automatically. Share notes instantly with your team.
          </p>

          <!-- Feature List -->
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Auto-join meetings</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Full transcription + AI summary</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-text-muted">
              <svg
                class="w-5 h-5 text-orange-600 flex-shrink-0 mt-0.5"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>Searchable meeting archive</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Secondary Features - 4 Icons -->
    <div
      class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-20 max-w-6xl mx-auto"
    >
      <!-- Team Management -->
      <div class="group relative">
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div
          class="relative text-center p-6 bg-surface/80 dark:bg-surface/50 backdrop-blur-sm rounded-2xl border border-border hover:border-orange-500/50 transition-all duration-300 hover:-translate-y-2"
        >
          <div
            class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h4 class="font-display font-bold text-text mb-2">Multi-Tenancy</h4>
          <p class="text-sm text-text-muted">
            Perfect for teams with workspace management
          </p>
        </div>
      </div>

      <!-- CRM -->
      <div class="group relative">
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div
          class="relative text-center p-6 bg-surface/80 dark:bg-surface/50 backdrop-blur-sm rounded-2xl border border-border hover:border-orange-500/50 transition-all duration-300 hover:-translate-y-2"
        >
          <div
            class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
              ></path>
            </svg>
          </div>
          <h4 class="font-display font-bold text-text mb-2">Built-in CRM</h4>
          <p class="text-sm text-text-muted">
            Track customers and services in one place
          </p>
        </div>
      </div>

      <!-- Social Media -->
      <div class="group relative">
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div
          class="relative text-center p-6 bg-surface/80 dark:bg-surface/50 backdrop-blur-sm rounded-2xl border border-border hover:border-orange-500/50 transition-all duration-300 hover:-translate-y-2"
        >
          <div
            class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
              ></path>
            </svg>
          </div>
          <h4 class="font-display font-bold text-text mb-2">
            Social Management
          </h4>
          <p class="text-sm text-text-muted">
            Schedule LinkedIn posts and more
          </p>
        </div>
      </div>

      <!-- Analytics -->
      <div class="group relative">
        <div
          class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div
          class="relative text-center p-6 bg-surface/80 dark:bg-surface/50 backdrop-blur-sm rounded-2xl border border-border hover:border-orange-500/50 transition-all duration-300 hover:-translate-y-2"
        >
          <div
            class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-500/25"
          >
            <svg
              class="w-7 h-7 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
          </div>
          <h4 class="font-display font-bold text-text mb-2">Smart Analytics</h4>
          <p class="text-sm text-text-muted">
            Track time and optimize your schedule
          </p>
        </div>
      </div>
    </div>

    <!-- Integration Badges -->
    <div class="text-center bg-surface/30 rounded-3xl p-12">
      <p
        class="text-sm text-text-muted mb-8 uppercase tracking-wider font-semibold"
      >
        Integrates With Everything You Use
      </p>
      <div
        class="flex flex-wrap justify-center items-center gap-12 md:gap-16 mb-6"
      >
        <!-- Google Calendar -->
        <div
          class="flex items-center gap-3 opacity-70 hover:opacity-100 transition-opacity cursor-pointer"
        >
          <img
            src={googleCalendar.src}
            alt="Google Calendar"
            class="h-12 w-auto object-contain"
          />
          <span class="text-text font-semibold text-base md:text-lg"
            >Google Calendar</span
          >
        </div>

        <!-- Outlook Calendar -->
        <div
          class="flex items-center gap-3 opacity-70 hover:opacity-100 transition-opacity cursor-pointer"
        >
          <img
            src={outlookCalendar.src}
            alt="Outlook Calendar"
            class="h-12 w-auto object-contain"
          />
          <span class="text-text font-semibold text-base md:text-lg"
            >Outlook Calendar</span
          >
        </div>

        <!-- Zoom -->
        <div
          class="flex items-center gap-3 opacity-70 hover:opacity-100 transition-opacity cursor-pointer"
        >
          <img src={zoom.src} alt="Zoom" class="h-12 w-auto object-contain" />
          <span class="text-text font-semibold text-base md:text-lg">Zoom</span>
        </div>

        <!-- Google Meet -->
        <div
          class="flex items-center gap-3 opacity-70 hover:opacity-100 transition-opacity cursor-pointer"
        >
          <img
            src={googleMeet.src}
            alt="Google Meet"
            class="h-12 w-auto object-contain"
          />
          <span class="text-text font-semibold text-base md:text-lg"
            >Google Meet</span
          >
        </div>

        <!-- LinkedIn -->
        <div
          class="flex items-center gap-3 opacity-70 hover:opacity-100 transition-opacity cursor-pointer"
        >
          <img
            src={linkedin.src}
            alt="LinkedIn"
            class="h-12 w-auto object-contain"
          />
          <span class="text-text font-semibold text-base md:text-lg"
            >LinkedIn</span
          >
        </div>
      </div>
      <div
        class="mt-8 inline-flex items-center gap-2 bg-orange-500/10 border border-orange-500/20 rounded-full px-6 py-3"
      >
        <svg
          class="w-5 h-5 text-orange-600 dark:text-orange-400 animate-pulse"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="text-sm font-semibold text-orange-600 dark:text-orange-400"
          >More integrations coming soon</span
        >
      </div>
    </div>
  </div>

  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern
          id="features-grid"
          width="32"
          height="32"
          patternUnits="userSpaceOnUse"
        >
          <path
            d="M 32 0 L 0 0 0 32"
            fill="none"
            stroke="currentColor"
            stroke-width="1"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#features-grid)"></rect>
    </svg>
  </div>
</section>
