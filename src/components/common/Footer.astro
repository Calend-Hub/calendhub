---
import { SITE_CONFIG } from '../../data/site-config';

export interface Props {
  siteName?: string;
}

const { siteName = SITE_CONFIG.title } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border mt-auto bg-gradient-to-b from-background to-orange-500/5">
  <div class="container py-8">
    <div class="flex flex-col lg:flex-row justify-between items-center gap-6">
      <!-- Left: Copyright -->
      <div class="text-center lg:text-left">
        <p class="text-sm text-text-muted">
          © {currentYear} <span class="font-semibold text-text">CalendHub</span>. All rights reserved.
        </p>
      </div>

      <!-- Right: Policy Links & Social Icons -->
      <div class="flex flex-col sm:flex-row items-center gap-6">
        <!-- Policy Links -->
        <div class="flex flex-wrap justify-center gap-3 text-xs text-text-muted">
          <a href="/terms-of-service" class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors">Terms</a>
          <span class="text-orange-500/30">•</span>
          <a href="/privacy-policy" class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors">Privacy</a>
        </div>

        <!-- Social Icons -->
        <div class="flex items-center gap-4">
          {SITE_CONFIG.social.linkedin && (
            <a
              href={SITE_CONFIG.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-text-muted hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
              aria-label="LinkedIn"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                <rect x="2" y="9" width="4" height="12"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            </a>
          )}

          {SITE_CONFIG.social.instagram && (
            <a
              href={`https://instagram.com/${SITE_CONFIG.social.instagram.replace('@', '')}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-text-muted hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
              aria-label="Instagram"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          )}

          <a
            href="/rss.xml"
            class="text-sm text-text-muted hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
            aria-label="RSS Feed"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"></path>
              <path d="M4 4a16 16 0 0 1 16 16"></path>
              <circle cx="5" cy="19" r="1"></circle>
            </svg>
          </a>

          {SITE_CONFIG.social.youtube && (
            <a
              href={SITE_CONFIG.social.youtube}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-text-muted hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
              aria-label="YouTube"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</footer>