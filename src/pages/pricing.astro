---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Pricing - CalendHub | Simple Pricing, Powerful Scheduling"
  description="One simple plan for everyone. $12.99/month billed yearly or $14.99/month billed monthly. 7-day free trial, no credit card required. Cancel anytime."
  breadcrumb={[
    { name: 'Home', url: '/' },
    { name: 'Pricing', url: '/pricing' }
  ]}
