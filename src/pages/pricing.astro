  <div class="min-h-screen">
    <!-- Hero Section - Two Column Layout -->
    <section class="py-20 relative overflow-hidden">
      <!-- Background gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-orange-500/5 via-transparent to-transparent pointer-events-none"></div>

      <div class="container relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Header -->
          <div class="text-center mb-16">
            <div class="inline-flex items-center gap-2 bg-orange-500/10 border border-orange-500/20 rounded-full px-4 py-2 text-sm font-medium text-orange-600 dark:text-orange-400 mb-6">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span>7-Day Free Trial</span>
            </div>
            <h1 class="text-4xl md:text-5xl font-display font-bold text-text mb-4">
              One Plan. <span class="text-text-muted">Everything You Need.</span>
            </h1>
            <p class="text-xl text-text-muted max-w-2xl mx-auto">
              No confusing tiers. No hidden features. Just powerful scheduling for everyone.
            </p>
          </div>

          <!-- Two Column Pricing Layout -->
          <div class="grid lg:grid-cols-2 gap-10 items-start">

            <!-- Left: Pricing Card -->
            <div class="group relative">
              <div class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-amber-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="relative bg-surface/80 dark:bg-surface/50 backdrop-blur-sm border border-border hover:border-orange-500/50 rounded-2xl p-8 transition-all duration-300">

                <!-- Billing Toggle -->
                <div class="flex justify-center mb-6">
                  <div class="inline-flex items-center bg-background/50 border border-border rounded-full p-1">
                    <button
                      id="monthly-btn"
                      class="px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 text-text-muted"
                    >
                      Monthly
                    </button>
                    <button
                      id="yearly-btn"
                      class="px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 bg-orange-500 text-white"
                    >
                      Yearly
                      <span class="ml-1 text-xs opacity-80">Save 13%</span>
                    </button>
                  </div>
                </div>

                <!-- Price Display -->
                <div class="text-center mb-6">
                  <div class="flex items-baseline justify-center gap-1">
                    <span class="text-xl font-medium text-text-muted">$</span>
                    <span id="price-display" class="text-6xl font-display font-bold text-orange-600">12.99</span>
                  </div>
                  <p class="text-text-muted mt-2">
                    <span id="billing-text">per month, billed yearly</span>
                    <span class="block text-sm mt-1">per user</span>
                  </p>
                </div>

                <!-- CTA Button -->
                <a
                  href="https://app.calendhub.com/sign-up"
                  class="block w-full text-center py-4 px-6 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-orange-500/25 hover:-translate-y-0.5 mb-3"
