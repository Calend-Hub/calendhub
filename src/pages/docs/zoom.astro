  {/* --- Client-Side JS for FAQ Toggle --- */}
  <script is:inline>
    // 1. FAQ Toggle Logic
    document.addEventListener('DOMContentLoaded', () => {
      const faqContainer = document.querySelector('.faq-container');
      
      if (faqContainer) {
        faqContainer.addEventListener('click', (e) => {
          const button = e.target.closest('.faq-toggle');
          if (!button) return;

          const parentDiv = button.closest('[data-faq-index]');
          if (!parentDiv) return;

          const answer = parentDiv.querySelector('.faq-answer');
          const chevron = parentDiv.querySelector('.chevron-icon');
          
          if (answer && chevron) {
            const isExpanded = button.getAttribute('aria-expanded') === 'true';

            // Close all others first
            document.querySelectorAll('.faq-answer').forEach(ans => {
              if (ans !== answer) ans.classList.add('hidden');
            });
            document.querySelectorAll('.faq-toggle').forEach(btn => {
              if (btn !== button) btn.setAttribute('aria-expanded', 'false');
            });
            document.querySelectorAll('.chevron-icon').forEach(chev => {
              if (chev !== chevron) chev.classList.remove('rotate-180');
            });


            // Toggle the current one
            if (isExpanded) {
              answer.classList.add('hidden');
              chevron.classList.remove('rotate-180');
              button.setAttribute('aria-expanded', 'false');
            } else {
              answer.classList.remove('hidden');
              chevron.classList.add('rotate-180');
              button.setAttribute('aria-expanded', 'true');
            }
          }
        });
      }

    });
  </script>
