---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { formatDate } from '../../lib/utils';

// For now, we'll use placeholder data since comments aren't implemented yet
const comments = [
  // Add sample data structure for UI development
];

const pendingCount = 0;
const approvedCount = 0;
const spamCount = 0;
---

<AdminLayout title="Comments" activeNav="comments">
  <div class="p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Comments</h1>
      <p class="text-text-muted">Moderate and manage user comments</p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-surface border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-2xl font-bold">{pendingCount}</div>
            <div class="text-sm text-text-muted mt-1">Pending</div>
          </div>
          <svg class="w-10 h-10 text-text-muted opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="bg-surface border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-2xl font-bold">{approvedCount}</div>
            <div class="text-sm text-text-muted mt-1">Approved</div>
          </div>
          <svg class="w-10 h-10 text-text-muted opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="bg-surface border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-2xl font-bold">{spamCount}</div>
            <div class="text-sm text-text-muted mt-1">Spam</div>
          </div>
          <svg class="w-10 h-10 text-text-muted opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="bg-surface border border-border rounded-lg">
      <div class="px-6 py-4 border-b border-border">
        <h2 class="text-lg font-semibold">All Comments</h2>
      </div>
      
      {comments.length > 0 ? (
        <div class="divide-y divide-border">
          {comments.map((comment) => (
            <div class="p-6">
              <!-- Comment content would go here -->
            </div>
          ))}
        </div>
      ) : (
        <div class="p-12 text-center">
          <svg class="w-16 h-16 mx-auto text-text-muted opacity-20 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <p class="text-text-muted mb-2">No comments yet</p>
          <p class="text-sm text-text-muted">Comments will appear here when users submit them on your blog posts.</p>
        </div>
      )}
    </div>

    <!-- Info -->
    <div class="mt-8 p-4 bg-surface border border-border rounded-lg">
      <p class="text-sm text-text-muted">
        <strong>Note:</strong> Comment functionality is currently in development. Once enabled, you'll be able to moderate user comments here.
      </p>
    </div>
  </div>
</AdminLayout>