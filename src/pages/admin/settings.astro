                type="text"
                name="socialYoutube"
                value={siteConfig.social?.youtube || ''}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text transition-colors"
                placeholder="channel-name or @handle"
              />
