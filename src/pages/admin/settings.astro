              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <span class="text-text-muted text-sm">@</span>
                </div>
                <input
                  type="text"
                  name="socialInstagram"
                  value={siteConfig.social?.instagram?.replace('@', '') || ''}
                  class="w-full pl-8 pr-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text transition-colors"
                  placeholder="username"
                />
              </div>
            </div>

            <!-- YouTube -->
            <div>
              <label class="flex items-center gap-2 text-sm font-medium mb-3">
                <svg class="w-5 h-5 text-text-muted" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
