---
import AdminLayout from '../../layouts/AdminLayout.astro';
import fs from 'fs/promises';
import path from 'path';

// Load current site config from JSON file
const configPath = path.join(process.cwd(), 'public', 'data', 'settings', 'site-config.json');
let siteConfig = {
  title: 'My Astro Blog',
  description: '',
  url: '',
  gaId: ''
};

try {
  const configContent = await fs.readFile(configPath, 'utf-8');
  siteConfig = JSON.parse(configContent);
} catch (e) {
  console.error('Failed to load site config:', e);
}

// Extract current values for the form
const currentConfig = {
  siteName: siteConfig.title || 'My Astro Blog',
  siteDescription: siteConfig.description || '',
  siteUrl: siteConfig.url || '',
  gaId: siteConfig.gaId || '',
  robotsIndex: true,
  robotsFollow: true,
};

// Load SEO settings JSON
const seoSettingsPath = path.join(process.cwd(), 'public', 'data', 'settings', 'seo-settings.json');
let seoSettings = {
  sitemap: {
    enabled: true,
    priority: '1.0',
    changefreq: 'weekly'
  },
  schema: {
    enabled: true,
    type: 'Blog',
    logo: '',
    sameAs: []
  },
  meta: {
    themeColor: '#000000',
    msApplicationTileColor: '#000000',
    keywords: '',
    canonicalUrl: ''
  }
};

try {
  const seoContent = await fs.readFile(seoSettingsPath, 'utf-8');
  seoSettings = JSON.parse(seoContent);
} catch (e) {
  // File doesn't exist yet, use defaults
}
---

<AdminLayout title="Settings" activeNav="settings">
  <div class="p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Settings</h1>
      <p class="text-text-muted">Configure your site settings and SEO</p>
    </div>

    <form id="settingsForm" class="space-y-8">
      <!-- Site Information -->
      <div class="bg-surface border border-border rounded-lg">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-semibold">Site Information</h2>
          <p class="text-sm text-text-muted mt-1">Basic information about your website</p>
        </div>
        <div class="p-6 space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">Site Name</label>
              <input
                type="text"
                name="siteName"
                value={currentConfig.siteName}
                required
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="My Awesome Blog"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Site URL</label>
              <input
                type="url"
                name="siteUrl"
                value={currentConfig.siteUrl}
                required
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="https://example.com"
              />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Site Description</label>
            <textarea
              name="siteDescription"
              rows="3"
              class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
              placeholder="A brief description of your website for search engines..."
            >{currentConfig.siteDescription}</textarea>
          </div>
        </div>
      </div>


      <!-- SEO Settings -->
      <div class="bg-surface border border-border rounded-lg">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-semibold">SEO Settings</h2>
          <p class="text-sm text-text-muted mt-1">Search engine optimization settings</p>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium mb-2">Default Meta Keywords</label>
            <input
              type="text"
              name="metaKeywords"
              value={seoSettings.meta?.keywords || ''}
              class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
              placeholder="blog, tech, programming, web development"
            />
            <p class="text-xs text-text-muted mt-1">Comma-separated keywords for all pages</p>
          </div>

          <div class="space-y-3 pt-2">
            <label class="flex items-center gap-3">
              <input
                type="checkbox"
                name="robotsIndex"
                checked={currentConfig.robotsIndex}
                class="w-4 h-4 rounded border-border"
              />
              <span class="text-sm">Allow search engines to index this site</span>
            </label>
            <label class="flex items-center gap-3">
              <input
                type="checkbox"
                name="robotsFollow"
                checked={currentConfig.robotsFollow}
                class="w-4 h-4 rounded border-border"
              />
              <span class="text-sm">Allow search engines to follow links</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Sitemap Settings -->
      <div class="bg-surface border border-border rounded-lg">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-semibold">Sitemap Settings</h2>
          <p class="text-sm text-text-muted mt-1">Configure XML sitemap generation</p>
        </div>
        <div class="p-6 space-y-4">
          <label class="flex items-center gap-3">
            <input
              type="checkbox"
              name="sitemapEnabled"
              checked={seoSettings.sitemap.enabled}
              class="w-4 h-4 rounded border-border"
            />
            <span class="text-sm">Enable XML Sitemap</span>
          </label>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">Default Priority</label>
              <select name="sitemapPriority" class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text">
                <option value="0.1" selected={seoSettings.sitemap.priority === '0.1'}>0.1</option>
                <option value="0.3" selected={seoSettings.sitemap.priority === '0.3'}>0.3</option>
                <option value="0.5" selected={seoSettings.sitemap.priority === '0.5'}>0.5</option>
                <option value="0.7" selected={seoSettings.sitemap.priority === '0.7'}>0.7</option>
                <option value="0.9" selected={seoSettings.sitemap.priority === '0.9'}>0.9</option>
                <option value="1.0" selected={seoSettings.sitemap.priority === '1.0'}>1.0</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Change Frequency</label>
              <select name="sitemapChangefreq" class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text">
                <option value="always" selected={seoSettings.sitemap.changefreq === 'always'}>Always</option>
                <option value="hourly" selected={seoSettings.sitemap.changefreq === 'hourly'}>Hourly</option>
                <option value="daily" selected={seoSettings.sitemap.changefreq === 'daily'}>Daily</option>
                <option value="weekly" selected={seoSettings.sitemap.changefreq === 'weekly'}>Weekly</option>
                <option value="monthly" selected={seoSettings.sitemap.changefreq === 'monthly'}>Monthly</option>
                <option value="yearly" selected={seoSettings.sitemap.changefreq === 'yearly'}>Yearly</option>
                <option value="never" selected={seoSettings.sitemap.changefreq === 'never'}>Never</option>
              </select>
            </div>
          </div>
        </div>
      </div>


      <!-- Social Media -->
      <div class="bg-surface border border-border rounded-lg">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-semibold">Social Media</h2>
          <p class="text-sm text-text-muted mt-1">Social media accounts for the footer links</p>
        </div>
        <div class="p-6 space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Twitter -->
            <div>
              <label class="flex items-center gap-2 text-sm font-medium mb-3">
                <svg class="w-5 h-5 text-text-muted" fill="currentColor" viewBox="0 0 24 24">
