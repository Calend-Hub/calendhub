                placeholder="server-invite-code"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Analytics -->
      <div class="bg-surface border border-border rounded-lg">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-semibold">Analytics</h2>
          <p class="text-sm text-text-muted mt-1">Configure tracking and analytics</p>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-medium mb-2">Google Analytics ID</label>
            <input
              type="text"
              name="gaId"
              value={currentConfig.gaId}
              class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
              placeholder="G-XXXXXXXXXX"
            />
            <p class="text-xs text-text-muted mt-1">Your Google Analytics Measurement ID</p>
          </div>
        </div>
      </div>

      <!-- Blog CTA Settings -->
      <div class="bg-surface border border-border rounded-lg">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-semibold">Blog CTA Settings</h2>
          <p class="text-sm text-text-muted mt-1">Configure the call-to-action that appears in blog posts</p>
        </div>
        <div class="p-6 space-y-4">
          <label class="flex items-center gap-3">
            <input
              type="checkbox"
              name="ctaEnabled"
              checked={siteConfig.blogCTA?.enabled}
              class="w-4 h-4 rounded border-border"
            />
            <span class="text-sm">Enable CTA in blog posts</span>
          </label>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">CTA Title</label>
              <input
                type="text"
                name="ctaTitle"
                value={siteConfig.blogCTA?.title || 'Join Our Waitlist - Be One of the First CalendHub Creators'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Join Our Waitlist - Be One of the First CalendHub Creators"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Button Text</label>
              <input
                type="text"
                name="ctaButtonText"
                value={siteConfig.blogCTA?.buttonText || 'Join Waitlist'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Join Waitlist"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium mb-2">CTA Description</label>
            <textarea
              name="ctaDescription"
              rows="3"
              class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
              placeholder="Get exclusive early access to CalendHub's revolutionary AI creation platform..."
            >{siteConfig.blogCTA?.description || "Get exclusive early access to CalendHub's revolutionary AI creation platform. Join the select group of pioneering creators shaping the future of AI-powered content."}</textarea>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">Button URL</label>
              <input
                type="text"
                name="ctaButtonUrl"
                value={siteConfig.blogCTA?.buttonUrl || '/'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="/"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Secondary Text</label>
              <input
                type="text"
                name="ctaSecondaryText"
                value={siteConfig.blogCTA?.secondaryText || 'Limited Early Access'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Limited Early Access"
              />
            </div>
          </div>

          <label class="flex items-center gap-3">
            <input
              type="checkbox"
              name="ctaShowStats"
              checked={siteConfig.blogCTA?.showStats}
              class="w-4 h-4 rounded border-border"
            />
            <span class="text-sm">Show statistics in CTA</span>
          </label>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium mb-2">Stat 1 Number</label>
              <input
                type="text"
                name="ctaStat1Number"
                value={siteConfig.blogCTA?.stats?.[0]?.number || '1,000+'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="1,000+"
              />
              <label class="block text-sm font-medium mb-2 mt-2">Stat 1 Label</label>
              <input
                type="text"
                name="ctaStat1Label"
                value={siteConfig.blogCTA?.stats?.[0]?.label || 'Waitlist Members'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Waitlist Members"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Stat 2 Number</label>
              <input
                type="text"
                name="ctaStat2Number"
                value={siteConfig.blogCTA?.stats?.[1]?.number || 'First 500'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="First 500"
              />
              <label class="block text-sm font-medium mb-2 mt-2">Stat 2 Label</label>
              <input
                type="text"
                name="ctaStat2Label"
                value={siteConfig.blogCTA?.stats?.[1]?.label || 'Get Priority'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Get Priority"
              />
            </div>
            <div>
              <label class="block text-sm font-medium mb-2">Stat 3 Number</label>
              <input
                type="text"
                name="ctaStat3Number"
                value={siteConfig.blogCTA?.stats?.[2]?.number || 'Early 2025'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Early 2025"
              />
              <label class="block text-sm font-medium mb-2 mt-2">Stat 3 Label</label>
              <input
                type="text"
                name="ctaStat3Label"
                value={siteConfig.blogCTA?.stats?.[2]?.label || 'Launch Date'}
                class="w-full px-3 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text"
                placeholder="Launch Date"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="flex justify-end gap-4">
        <button
          type="button"
          onclick="window.location.reload()"
          class="px-6 py-2 border border-border rounded-lg hover:bg-surface transition-colors"
        >
          Cancel
        </button>
        <button
          type="submit"
          class="px-6 py-2 bg-text text-background rounded-lg hover:opacity-90 transition-opacity"
        >
          Save Settings
        </button>
      </div>
    </form>
  </div>


  <script>
  
    document.getElementById('settingsForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const settings = {};
      
      // Convert form data to object
      for (const [key, value] of formData.entries()) {
        if (key.includes('checkbox')) {
          settings[key] = formData.get(key) === 'on';
        } else {
          settings[key] = value;
        }
      }
      
      // Handle checkboxes that might be unchecked
      settings.robotsIndex = formData.has('robotsIndex');
      settings.robotsFollow = formData.has('robotsFollow');
      settings.sitemapEnabled = formData.has('sitemapEnabled');
      settings.schemaEnabled = formData.has('schemaEnabled');
      settings.ctaEnabled = formData.has('ctaEnabled');
      settings.ctaShowStats = formData.has('ctaShowStats');
      
      console.log('Form settings to save:', settings);
      
      try {
        const response = await fetch('/api/settings', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(settings),
        });

        if (!response.ok) {
          throw new Error('Failed to save settings');
        }
        
        // Show success message
        const button = e.target.querySelector('button[type="submit"]');
        const originalText = button.textContent;
        button.textContent = 'Saved!';
        button.classList.add('bg-green-600');
        
        setTimeout(() => {
          button.textContent = originalText;
          button.classList.remove('bg-green-600');
          // Reload to apply new settings
          window.location.reload();
        }, 1500);
        
      } catch (error) {
        console.error('Error saving settings:', error);
        alert('Failed to save settings: ' + error.message);
      }
    });
  </script>
