---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getCategories } from '../../lib/data';
import { getPublishedBlogPosts } from '../../lib/posts';

// Get categories
const categoriesData = await getCategories();

// Get all posts to count usage
const allPosts = await getPublishedBlogPosts();

// Count posts per category
const postCountMap = new Map();
allPosts.forEach(post => {
  const category = post.data.category;
  if (category) {
    postCountMap.set(category, (postCountMap.get(category) || 0) + 1);
  }
});

// Get categories from JSON file and add post counts
const categories = categoriesData.map(cat => ({
  ...cat,
  postCount: postCountMap.get(cat.name) || 0
})).sort((a, b) => a.name.localeCompare(b.name));

const totalCategories = categories.length;
const usedCategories = categories.filter(c => c.postCount > 0).length;
---

<AdminLayout title="Categories" activeNav="categories">
  <div class="p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Categories</h1>
      <p class="text-text-muted">Manage your blog categories</p>
    </div>

    <!-- Stats Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="flex items-center justify-between p-6 bg-surface border border-border rounded-lg">
        <div>
          <div class="text-3xl font-bold">{totalCategories}</div>
          <div class="text-sm text-text-muted mt-1">Total Categories</div>
        </div>
        <svg class="w-12 h-12 text-text-muted opacity-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
      </div>
      <div class="flex items-center justify-between p-6 bg-surface border border-border rounded-lg">
        <div>
          <div class="text-3xl font-bold">{usedCategories}</div>
          <div class="text-sm text-text-muted mt-1">Categories in Use</div>
        </div>
        <svg class="w-12 h-12 text-text-muted opacity-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
    </div>

    <!-- Add New Category -->
    <div class="bg-surface border border-border rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold mb-4">Add New Category</h2>
      <form id="add-category-form" class="flex gap-3">
        <input
          type="text"
          id="category-name"
          placeholder="Enter category name..."
          class="flex-1 px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-text transition-colors"
          required
        />
        <button
          type="submit"
          class="px-6 py-2 bg-text text-background rounded-lg hover:opacity-90 transition-opacity"
        >
          Add Category
        </button>
      </form>
      <div id="error-message" class="mt-3 text-sm text-red-500 hidden"></div>
      <div id="success-message" class="mt-3 text-sm text-green-500 hidden"></div>
    </div>

    <!-- Categories List -->
    <div class="bg-surface border border-border rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-border">
        <h2 class="text-lg font-semibold">All Categories</h2>
      </div>
      {categories.length > 0 ? (
        <div class="divide-y divide-border" id="categories-list">
          {categories.map((category) => (
            <div class="px-6 py-4 flex items-center justify-between hover:bg-background/50 transition-colors" data-category-id={category.id}>
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-background border border-border rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                </div>
                <div>
                  <div class="font-medium">{category.name}</div>
                  <div class="text-sm text-text-muted">
                    {category.postCount} {category.postCount === 1 ? 'post' : 'posts'}
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-3">
                {category.postCount > 0 && (
                  <a 
                    href={`/admin/posts?category=${encodeURIComponent(category.name)}`} 
                    class="text-sm px-3 py-1 border border-border rounded hover:bg-background transition-colors"
                  >
                    View Posts
                  </a>
                )}
                <button
                  type="button"
                  data-delete-category={category.id}
                  data-category-name={category.name}
                  data-post-count={category.postCount}
                  class="text-sm px-3 py-1 border border-border rounded hover:bg-background transition-colors"
                >
                  Delete
                </button>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="p-8 text-center text-text-muted">
          <svg class="w-12 h-12 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <p>No categories found. Add your first category above.</p>
        </div>
      )}
    </div>
  </div>

  <script>
    // Add category form
    const form = document.getElementById('add-category-form') as HTMLFormElement;
    const input = document.getElementById('category-name') as HTMLInputElement;
    const errorMsg = document.getElementById('error-message');
    const successMsg = document.getElementById('success-message');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const name = input.value.trim();
      if (!name) return;

      errorMsg?.classList.add('hidden');
      successMsg?.classList.add('hidden');

      try {
        const response = await fetch('/api/categories', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ name }),
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to add category');
        }

        // Show success message
        if (successMsg) {
          successMsg.textContent = `Category "${name}" added successfully!`;
          successMsg.classList.remove('hidden');
        }

        // Clear input
        input.value = '';

        // Reload page after a short delay
        setTimeout(() => {
          window.location.reload();
        }, 1500);

      } catch (error) {
        if (errorMsg) {
          errorMsg.textContent = error instanceof Error ? error.message : 'Failed to add category';
          errorMsg.classList.remove('hidden');
        }
      }
    });

    // Delete category buttons
    document.querySelectorAll('[data-delete-category]').forEach(button => {
      button.addEventListener('click', async (e) => {
        const target = e.currentTarget as HTMLElement;
        const categoryId = target.dataset.deleteCategory;
        const categoryName = target.dataset.categoryName;
        const postCount = parseInt(target.dataset.postCount || '0');

        if (postCount > 0) {
          alert(`Cannot delete "${categoryName}" because it has ${postCount} post(s). Please reassign or delete the posts first.`);
          return;
        }

        if (!confirm(`Are you sure you want to delete the category "${categoryName}"?`)) {
          return;
        }

        try {
          const response = await fetch('/api/categories', {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ id: categoryId }),
          });

          if (!response.ok) {
            const data = await response.json();
            throw new Error(data.error || 'Failed to delete category');
          }

          // Remove the category from the DOM
          const categoryRow = document.querySelector(`[data-category-id="${categoryId}"]`);
          if (categoryRow) {
            categoryRow.remove();
          }

          // Show success message
          if (successMsg) {
            successMsg.textContent = `Category "${categoryName}" deleted successfully!`;
            successMsg.classList.remove('hidden');
          }

          // Reload page after a short delay
          setTimeout(() => {
            window.location.reload();
          }, 1500);

        } catch (error) {
          alert(error instanceof Error ? error.message : 'Failed to delete category');
        }
      });
    });
  </script>
</AdminLayout>