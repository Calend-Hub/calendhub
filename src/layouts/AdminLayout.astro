---
import { ViewTransitions } from 'astro:transitions';
import { SITE_CONFIG } from '../data/site-config';
import SEOHead from '../components/seo/SEOHead.astro';
import ThemeToggle from '../components/common/ThemeToggle.astro';
import '../assets/styles/global.css';

export interface Props {
  title?: string;
  activeNav?: string;
}

const { title = 'Admin Dashboard', activeNav = 'dashboard' } = Astro.props;

// Check authentication
const sessionToken = Astro.cookies.get('admin-session');
if (sessionToken?.value !== 'authenticated') {
  return Astro.redirect('/admin/login');
}

const currentPath = Astro.url.pathname;
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
---

<!DOCTYPE html>
<html lang={SITE_CONFIG.locale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Local Fonts loaded via CSS -->
    
    <SEOHead
      title={title}
      description="Admin Dashboard"
      noindex={true}
    />
    
    <ViewTransitions />
    
    <!-- Google Analytics -->
    {GA_MEASUREMENT_ID && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
        <script define:vars={{ GA_MEASUREMENT_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', GA_MEASUREMENT_ID);
        </script>
      </>
    )}
    
    <!-- Dark mode script -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body>
    <!-- Floating Theme Toggle -->
    <div class="fixed top-4 right-4 z-50">
      <ThemeToggle />
    </div>
    
    <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-background sticky top-0 h-screen">
      <div class="relative h-full flex flex-col">
        <!-- Admin Header -->
        <div class="p-6">
          <h2 class="text-3xl font-display">CalendHub Blog</h2>
          <p class="text-sm text-text-muted mt-1">Admin Dashboard</p>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto p-4 pb-20">
          <ul class="space-y-1">
            <li>
              <a 
                href="/admin" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span>Dashboard</span>
              </a>
            </li>
            <li>
              <a 
                href="/admin/posts" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin/posts' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span>Posts</span>
              </a>
            </li>
            <li>
              <a 
                href="/admin/categories" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin/categories' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <span>Categories</span>
              </a>
            </li>
            <li>
              <a 
                href="/admin/tags" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin/tags' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                </svg>
                <span>Tags</span>
              </a>
            </li>
            <li>
              <a 
                href="/admin/images" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin/images' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>Media Library</span>
              </a>
            </li>
            <li>
              <a 
                href="/admin/authors" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin/authors' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                <span>Authors</span>
              </a>
            </li>
            <li>
            </li>
            <li>
              <a 
                href="/admin/settings" 
                class={`flex items-center gap-3 px-4 py-2 rounded-lg transition-colors ${
                  currentPath === '/admin/settings' ? 'bg-text text-background' : 'hover:bg-border'
                }`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>Settings</span>
              </a>
            </li>
          </ul>
        </nav>

        <!-- Bottom Actions -->
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <div class="flex gap-2">
            <a href="/" target="_blank" class="flex-1 flex items-center justify-center gap-2 px-3 py-2 text-sm rounded-lg hover:bg-surface transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              View
            </a>
            <a href="/admin/logout" class="flex-1 flex items-center justify-center gap-2 px-3 py-2 text-sm rounded-lg hover:bg-surface transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Sign Out
            </a>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 bg-background flex flex-col min-h-screen">
      <slot />
    </main>
  </div>
  </body>
</html>